<Window x:Class="KisaSchoolMangement.Views.Auth.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Kisa School - Login" 
        WindowStyle="None"
        AllowsTransparency="True"
        Height="550" 
        Width="950"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Segoe UI">

    <!-- Main Grid with Full Background -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2C3E50" Offset="0"/>
                <GradientStop Color="#3498DB" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Close Button -->
        <Button x:Name="btnClose" 
                Content="✕" 
                Width="30" 
                Height="30" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Margin="15"
                Background="Transparent" 
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="btnClose_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Main Login Card -->
        <Border Background="White" 
                CornerRadius="25" 
                Width="850" 
                Height="480"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="10" BlurRadius="40" Opacity="0.2" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="380"/>
                    <!-- Branding -->
                    <ColumnDefinition Width="*"/>
                    <!-- Form -->
                </Grid.ColumnDefinitions>

                <!-- Left Branding Section -->
                <Border Background="#3498DB" 
                        CornerRadius="25,0,0,25"
                        Grid.Column="0">
                    <Grid>
                        <!-- Decorative Circles -->
                        <Ellipse Width="200" Height="200" Fill="White" Opacity="0.05" Margin="-50,-50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <Ellipse Width="150" Height="150" Fill="White" Opacity="0.05" Margin="0,0,-30,-30" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30">
                            <!-- Logo Placeholder -->
                            <Border Background="White" 
                                    CornerRadius="20" 
                                    Width="110" 
                                    Height="110"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,25">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                </Border.Effect>
                                <Image Source="/Assets/Images/Schoollogo.png" Margin="15"/>
                            </Border>

                            <TextBlock Text="KISA SCHOOL" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>

                            <TextBlock Text="MANAGEMENT SYSTEM" 
                                       FontSize="14" 
                                       Foreground="#E0E0E0"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"
                                       Opacity="0.8"/>

                            <Border Background="White" Height="1" Width="50" Margin="0,30,0,30" Opacity="0.3"/>

                            <TextBlock Text="Secure &amp; Efficient School Administration" 
                                       FontSize="14" 
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       Opacity="0.9"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Right Login Form -->
                <Grid Grid.Column="1" Margin="50">
                    <StackPanel VerticalAlignment="Center">

                        <TextBlock Text="Welcome Back" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Welcome back you've been missed!" 
                                   FontSize="14" 
                                   Foreground="#666666" 
                                   Margin="0,0,0,40"/>

                        <!-- Username -->
                        <TextBlock Text="Username" FontSize="14" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,8"/>

                        <!-- CORRECT: rounded background via Border (TextBox itself has no CornerRadius) -->
                        <Border Background="#FFFFFF"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1.5"
                                CornerRadius="8"
                                Padding="12,0"
                                VerticalAlignment="Center"
                                Height="45">
                            <TextBox x:Name="txtUsername"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="14"
                                     Foreground="#333333"
                                     VerticalContentAlignment="Center"/>
                        </Border>

                        <!-- Password -->
                        <TextBlock Text="Password" FontSize="14" FontWeight="SemiBold" Foreground="#333333" Margin="0,20,0,8"/>

                        <!-- CORRECT: rounded background via Border for PasswordBox -->
                        <Border Background="#FFFFFF"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1.5"
                                CornerRadius="8"
                                Padding="12,0"
                                VerticalAlignment="Center"
                                Height="45">
                            <PasswordBox x:Name="txtPassword"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontSize="14"
                                         Foreground="#333333"
                                         VerticalContentAlignment="Center"
                                         KeyDown="txtPassword_KeyDown"/>
                        </Border>

                        <!-- Options -->
                        <Grid Margin="0,20,0,30">
                            <CheckBox x:Name="cbRememberMe" Content="Remember me" FontSize="13" Foreground="#666666" VerticalAlignment="Center"/>
                            <TextBlock Text="Recovery Password" 
                                       FontSize="13" 
                                       Foreground="#666666"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Cursor="Hand"
                                       TextDecorations="Underline"/>
                        </Grid>

                        <!-- Login Button -->
                        <Button x:Name="LoginButton" 
                                Content="Sign In" 
                                Height="50"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Background="#3498DB"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="LoginButton_Click">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="4" Direction="270" Color="#3498DB" Opacity="0.3"/>
                            </Button.Effect>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <!-- Use a Border with explicit CornerRadius inside the template -->
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Error Message -->
                        <TextBlock x:Name="lblMessage" 
                                   Foreground="#E74C3C" 
                                   FontSize="13"
                                   Margin="0,20,0,0" 
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>